{
  "name": "kistt",
  "version": "1.0.0",
  "description": "KiSTT - Kinder Stranger Things Tracker: A tool for tracking Kinder Joy Stranger Things toys collection",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:backend": "cd packages/backend && npm run start:dev",
    "start:frontend": "cd packages/frontend && npm run dev",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "install:all": "npm install && npm run install:backend && npm run install:frontend",
    "install:backend": "cd packages/backend && npm install",
    "install:frontend": "cd packages/frontend && npm install",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd packages/backend && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd packages/backend && npm run test",
    "test:frontend": "cd packages/frontend && npm run test"
  },
  "keywords": [
    "kinder",
    "stranger-things",
    "toys",
    "tracker",
    "collection"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}